{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BPM Sniffer",
  "version": "1.0.4",
  "identifier": "com.renlu.bpm-sniffer",
  "build": {
    "beforeBuildCommand": "pnpm web:build",
    "beforeDevCommand": "pnpm web:dev",
    "frontendDist": "dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": [
        {
          "identifier": "app",
          "platforms": [
            "windows"
          ],
          "windows": [
            "main",
            "about",
            "logs"
          ],
          "webviews": [
            "main",
            "about",
            "logs"
          ],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:default",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download",
            "updater:allow-install"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "BPM Sniffer",
        "url": "tauri://localhost",
        "width": 390,
        "height": 390,
        "resizable": true,
        "minWidth": 220,
        "minHeight": 120,
        "maxWidth": 390,
        "maxHeight": 390,
        "maximizable": false
      }
    ]
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "resources": [
      "icons/icon.ico"
    ],
    "targets": [
      "nsis"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE4Mjg2MTYwRUZGM0I5ClJXUzU4KzlnWVNnWUFENUpuaFBhazh1OVBDa1ZHRHgyZHBVaG9YeGJpUXNNbHkyMmYrREhyZkdPCg=="
    },
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}
{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BPM Sniffer",
  "version": "1.0.0",
  "identifier": "com.renlu.bpm-sniffer",
  "build": {
    "beforeBuildCommand": "pnpm web:build",
    "beforeDevCommand": "pnpm web:dev",
    "frontendDist": "src-tauri/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": [
        {
          "identifier": "app",
          "platforms": ["windows"],
          "windows": ["main", "about"],
          "webviews": ["main", "about"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "BPM Sniffer",
        "url": "tauri://localhost",
        "width": 390,
        "height": 390,
        "resizable": true,
        "minWidth": 220,
        "minHeight": 120,
        "maxWidth": 390,
        "maxHeight": 390,
        "maximizable": false
      }
    ]
  },
  "bundle": {
    "resources": [
      "icons/icon.ico"
    ],
    "targets": ["nsis"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://your-cn-endpoint.example.com/updates/{{target}}/{{current_version}}",
        "https://github.com/your-org/bpm-sniffer/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    },
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}

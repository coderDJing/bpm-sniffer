{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BPM Sniffer",
  "version": "0.1.0",
  "identifier": "com.renlu.bpm-sniffer",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": [
        {
          "identifier": "app",
          "platforms": ["windows"],
          "windows": ["main"],
          "webviews": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "BPM Sniffer",
        "width": 420,
        "height": 260,
        "resizable": true
      }
    ]
  },
  "bundle": { "resources": [] }
}
